<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/view_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_shopping_cart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detail_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardMaxElevation="@dimen/dimen_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_cart">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menu_detail_image"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/beef_steak_with_sauce"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menu_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4"
                android:text="Hurberger"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/menu_detail_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KFc"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="@id/menu_detail_name"
                app:layout_constraintTop_toBottomOf="@id/menu_detail_name" />

            <TextView
                android:id="@+id/menu_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Taste"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/add_to_cart_btn"
                app:layout_constraintLeft_toLeftOf="@id/menu_detail_name"
                app:layout_constraintTop_toBottomOf="@id/menu_detail_restaurant_name" />

            <Button
                android:id="@+id/add_to_cart_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dimen_4"
                android:background="@drawable/btn_rounded"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@id/horizontal_divider"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menu_detail_description" />

            <View
                android:id="@+id/horizontal_divider"
                android:layout_width="230dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
                app:layout_constraintTop_toBottomOf="@id/menu_detail_description" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:progressBackgroundTint="@color/colorPrimaryDark"
                android:progressTint="@color/colorPrimary"
                android:rating="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
                app:layout_constraintRight_toRightOf="@id/vertical_divider"
                app:layout_constraintTop_toBottomOf="@id/horizontal_divider" />

            <View
                android:id="@+id/vertical_divider"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_divider" />

            <TextView
                android:id="@+id/menu_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240000"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/rating_bar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_divider" />

            <TextView
                android:id="@+id/txt_kyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ks"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBaseline_toBaselineOf="@id/menu_detail_price"
                app:layout_constraintLeft_toRightOf="@id/menu_detail_price" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_error_menu_by_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Error Loading Articles!!!"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loading_view_menu_by_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/related_menu_of_these_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Related Menus of this "
        android:textColor="@color/colorPrimary"
        android:textSize="21dp"
        app:layout_constraintTop_toBottomOf="@id/detail_cardView"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/related_menu_of_these_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KFC"
        android:textColor="@color/colorPrimary"
        android:textSize="21dp"
        app:layout_constraintLeft_toRightOf="@id/related_menu_of_these_description"
        app:layout_constraintBaseline_toBaselineOf="@id/related_menu_of_these_description"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu_by_restaurant_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/related_menu_of_these_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>