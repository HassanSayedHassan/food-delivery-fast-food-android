<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/detail_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardMaxElevation="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_16"
    android:layout_marginLeft="@dimen/dimen_4">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/menu_detail_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/beef_steak_with_sauce" />
        <TextView
            android:id="@+id/menu_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hurberger"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/menu_detail_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KFc"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/menu_detail_name"
            app:layout_constraintTop_toBottomOf="@id/menu_detail_name"/>
        <TextView
            android:id="@+id/menu_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Taste"
            app:layout_constraintTop_toBottomOf="@id/menu_detail_restaurant_name"
            app:layout_constraintLeft_toLeftOf="@id/menu_detail_name" />
        <View
            android:id="@+id/horizontal_divider"
            android:layout_width="200dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/menu_detail_description"
            app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider"
            app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/vertical_divider"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:numStars="5"
            android:rating="4"
            android:progressTint="@color/colorPrimary"
            android:progressBackgroundTint="@color/colorPrimaryDark"
            />
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="1dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/menu_detail_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/menu_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="240000 KS"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider"
            app:layout_constraintLeft_toRightOf="@id/rating_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>